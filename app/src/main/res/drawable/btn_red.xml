<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffff8a76" />
            <stroke
                android:width="1dp"
                android:color="#ffff0c2c" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffff3f36"
                android:endColor="#fff4432c"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffff3f36" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
</selector>