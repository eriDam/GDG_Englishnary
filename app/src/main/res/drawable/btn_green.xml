<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffb2ff9f" />
            <stroke
                android:width="1dp"
                android:color="#ff54d066" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff97e889"
                android:endColor="#ff91d67a"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff28c136" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>